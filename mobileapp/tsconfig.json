{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react-native",
    "lib": [
      "es6"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "constants/*"
  ],
  "exclude": [
    "**/*.d.ts",
    "node_modules",
    "babel_config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
